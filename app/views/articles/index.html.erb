
<div class="container">
  <div class="row">
    <div class="col-sm-8 col-centered">
      <% @articles.each do |article| %>
        <article>
          <h2><%= link_to article.title, article_path(article)%></h2>
          <p><%= article.content.first(200) %></p>
        </article>
      <% end %>
    </div>
  </div>
</div>
